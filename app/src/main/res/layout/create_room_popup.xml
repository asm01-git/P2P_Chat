<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:padding="20dp"
    android:elevation="50dp"
    android:id="@+id/popup_view">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="SET UP YOUR ROOM"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"/>
    <EditText
        android:id="@+id/editText_room_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_design"
        android:hint="Enter the name of room you want to create"
        android:padding="10dp"
        android:textSize="12sp" />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_checkbox"
        android:text="Set password for access"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_set_password"
        android:layout_marginTop="10dp"
        android:text="Set Password(at least 6 characters)"
        android:layout_margin="16dp"
        android:background="@drawable/edittext_design"
        android:textSize="12sp"
        android:padding="10dp"
        android:enabled="false"/>
    <Button
        android:id="@+id/createRoomBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/colorAccent"
        android:text="Create room"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff" />
</LinearLayout>